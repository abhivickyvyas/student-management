{
  "info": {
    "name": "Student Management API",
    "description": "Postman collection for testing the Student Management REST API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "studentId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Student",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has student id', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.id).to.be.a('number');",
              "    pm.collectionVariables.set('studentId', jsonData.id);",
              "});",
              "",
              "pm.test('Response has correct fields', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.firstName).to.eql('John');",
              "    pm.expect(jsonData.lastName).to.eql('Doe');",
              "    pm.expect(jsonData.email).to.eql('john.doe@example.com');",
              "    pm.expect(jsonData.department).to.eql('Computer Science');",
              "    pm.expect(jsonData.enrollmentYear).to.eql(2024);",
              "    pm.expect(jsonData.createdAt).to.be.a('string');",
              "    pm.expect(jsonData.updatedAt).to.be.a('string');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"dateOfBirth\": \"2000-05-15\",\n  \"department\": \"Computer Science\",\n  \"enrollmentYear\": 2024\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/students",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "students"]
        }
      }
    },
